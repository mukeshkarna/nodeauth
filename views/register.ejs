<% include layout %>

<div class="container">
    <h1>Register</h1>
    <p>Please register using the form below</p>

    

    <form action="/users/register" method="POST">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="name" placeholder="Enter Name" class="form-control">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" name="email" placeholder="Enter Email" class="form-control">
        </div>
        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" name="username" placeholder="Enter Username" class="form-control">
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" name="password1" placeholder="Enter Password" class="form-control">
        </div>
        <div class="form-group">
            <label for="Confirm Password">Confirm Password</label>
            <input type="password" name="password2" placeholder="Confirm Password" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-default" value="Register">
        </div>
    </form>
</div>